<div class="container page-container">
  <div class="row">
    <div class="col col-lg-6 offset-lg-3">
      <h1>Leaderboard</h1>
      <p class="lead">Discover the top 10 gardeners.</p>
      <table class="table">
        <thead>
          <th scope="col" class="text-center">Rank</th>
          <th scope="col">Gardener</th>
          <th scope="col">Plants</th>
          <th scope="col">Care Moments</th>
          <th scope="col" class="text-right">Doses of care</th>
          <th scope="col" class="text-center">Level</th>
        </thead>
        <tbody>
          <% @top_users.each.with_index(1) do |user, rank| %>
            <tr class="<%= 'table-warning' if (1..3).include?(rank) %>">
              <td class="text-center"><%= user_rank_medal(rank) %></td>
              <td><%= user.nickname || 'N/A' %></td>
              <td><%= user.plants_count %></td>
              <td><%= user.care_moments_count %></td>
              <td class="text-right"><%= format_number user.care_points %></td>
              <td class="text-center"><%= user.level %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
